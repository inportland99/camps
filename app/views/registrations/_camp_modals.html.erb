<% Camp.activecamps.each do |camp| %>
  <!-- confirmationModal -->
  <div class="modal fade" id="camp<%= camp.id %>Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title" id="myModalLabel"><%= camp.title %><small style='color:gray;'> Ages: <%= camp.age %></small></h3>
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times"></i></button>
        </div>
        <div class="modal-body">
          <% if camp.video_url && camp.video_url != "" %>
            <!-- <div class="row" style="margin-bottom:20px;"> -->
              <!-- <div class="col-sm-6 col-sm-offset-3"> -->
