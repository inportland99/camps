                  <!-- <iframe src="<%# camp.video_url %>?color=c9ff23&title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> -->
                <!-- </div> -->
              <!-- </div> -->
            <!-- </div> -->
          <% end %>
          <% if camp.online %>
            <div class="badge badge-success" style="margin-bottom:15px;">Online Camp</div>
          <% else %>
            <span class="badge badge-primary" style="margin-bottom:15px;">In-Person Camp</span>
          <% end %>
          <%= camp.description.html_safe if camp.description %>
          <%# unless camp.id == 20 %>
            <!-- <p>
              <h4>Offerings of this camp:</h4>
              <ul>
              <%# camp.camp_offerings.order(:start_date).where( year: 1 ).each do |co| %>
                <li><%# co.confirmation_name %></li>
              <%# end %>
              </ul>
            </p> -->
          <%# end %>
