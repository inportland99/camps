<header class="navbar navbar-expand-lg bg-light shadow-sm navbar-sticky">
  <div class="container">
    <%= link_to root_path(), class:"navbar-brand pe-3" do %>
      <%= image_tag "home_page/logo.png" %>
    <% end %>
    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse4" aria-expanded="false">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- Show on right when media is < large -->
    <div class="d-flex d-lg-none order-lg-3">
      <a href="tel:6147926284" class="nav-link px-2 ms-2">
        <i class="bx bx-mobile-alt fs-2"></i>
      </a>
      <a href="mailto:help@mathplusacademy.com" class="nav-link px-2">
        <i class="bx bx-chat fs-2"></i>
      </a>
    </div>
    <!-- Show on right when media is >= large -->
    <div class="d-none d-lg-flex order-lg-3">
      <a href="tel:6147874741" class="d-flex align-items-center text-decoration-none ms-4">
        <i class="bx bx-mobile-alt fs-2 text-primary"></i>
        <div class="fs-sm text-nowrap ps-2">
          <h6 class="fs-sm mb-0">Call or Text</h6>
          <span class="text-nav">(614) 792-6284</span>
        </div>
      </a>
      <a href="mailto:help@mathplusacademy.com" class="d-flex align-items-center text-decoration-none ms-4 pr-2">
        <i class="bx bx-chat fs-2 text-primary"></i>
        <div class="fs-sm ps-2">
          <h6 class="fs-sm mb-0">Email us</h6>
          <span class="text-nav">help@mathplusacademy.com</span>
        </div>
      </a>
        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ps-3">
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle fs-sm rounded-pill d-none d-lg-inline-flex" data-bs-toggle="dropdown">In-Person Camps</a>
                <ul class="dropdown-menu">
                    <% @inpersoncamps.each do |camp| %>
                        <%= link_to (camp.title+" <small style='color:gray;'>Ages: "+camp.age+"</small>").html_safe, camp_path(camp), class: "dropdown-item" %>
                    <% end %>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle fs-sm rounded-pill d-none d-lg-inline-flex" data-bs-toggle="dropdown">Online Camps</a>
                <ul class="dropdown-menu">
                    <% @onlinecamps.each do |camp| %>
                        <%= link_to (camp.title+" <small style='color:gray;'>Ages: "+camp.age+"</small>").html_safe, camp_path(camp), class: "dropdown-item" %>
                    <% end %>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle btn btn-primary btn-lg fs-sm rounded-pill d-none d-lg-inline-flex text-white" data-bs-toggle="dropdown">Enroll Now</a>
                <ul class="dropdown-menu">
                  <% @locations.each do |location| %>
                    <% if location.name == "Online" || location.name == "Powell" %>
                      <%= link_to location.name, new_registration_path(location: location.id), class: "dropdown-item"%>
                    <% end %>
                  <% end %>
                </ul>
            </li>

        </ul>

    </div>
    <!-- Show on left and in hamburger menu -->
    <nav id="navbarCollapse4" class="collapse navbar-collapse order-lg-2">
      <hr class="d-lg-none mt-3 mb-2">
      <ul class="d-lg-none navbar-nav me-auto">
        <% @inpersoncamps.each do |camp| %>
            <li class="nav-item">
                <%= link_to (camp.title+"<small style='color:gray;'> Ages: "+camp.age+"</small>").html_safe, camp_path(camp), class: "nav-link" %>
            </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>