<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(@location) do |f| %>
      <% if @location.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

          <ul>
          <% @location.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name %>
      <%= f.input :telephone %>
      <%= f.input :email %>
  </div>
  <div class="col-md-4">
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip, as: :string %>
  </div>
  <div class="col-md-4">
    <%= f.input :directions, as: :text, input_html: { height: '200px'} %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
      <%= f.submit "Submit", class: 'btn btn-lg btn-success' %>
    <% end %>
  </div>
</div>
