<div class="container">
    <div class="row mt centered">
      <div class="col-lg-4">
        <div class="card h-100">
          <div class="card-header">
            <h3 class="card-title">Innovation Labs</h3>
          </div>
          <div class="card-body" style="padding:15px;">
            <div class="card-text">
      				<div style="margin-bottom:15px;margin-top:15px;" class="circle_base type_1">
      					<%= image_tag('vgd.jpg', size: '150x150')%>
      				</div>
      				<h3>Ignite a new interest!</h3>
              Learn new tech skills.<br />
              No prior experience required.<br /><br />

              <% @activecamps.each do |camp| %>
                <% if camp.title.include? "Innov" %>
                  <%= link_to (camp.short_name+"<small style='color:gray;'> Ages: "+camp.age+"</small>").html_safe, "#camp#{camp.id}Modal", "data-toggle" => "modal" %>
                    <% if camp.online %>
                      <div class="badge badge-success" style="margin-bottom:15px;">Online</div>
                    <% else %>
                      <span class="badge badge-primary" style="margin-bottom:15px;">In-Person</span>
                    <% end %>
                  <br />
                <% end %>
              <% end %>
              <!-- <br /><br />Daily 90 minute sessions plus engaging at-home extensions. -->
            </div>
          </div><!--/col-lg-4 -->
        </div>
      </div>
